{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "ESNext"],
    "jsx": "react",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "engine/*": ["src/engine/*"]
    }
  },
  "include": ["./src", "index.d.ts"],
  "exclude": ["node_modules"]
}
